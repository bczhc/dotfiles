#!/bin/bash

set -e

if [ $# == 1 ] && [ $1 == "d" ]; then
    sleep 3
fi

sleep 0.2

date=`date "+Screenshot_%Y-%m-%d_%H-%M-%S"`
ffmpeg -f x11grab -i $DISPLAY -frames:v 1 "/home/bczhc/Pictures/screenshots/$date.png" -y 2> /dev/null && \
    notify-send -t 1000 'Screenshot has been grabbed' && \
    echo Done && exit 0

echo Failed!

