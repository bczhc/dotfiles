#!/bin/bash

set -e

[ $# -eq 0 ] && echo 'Usage: Command 0|1' && exit 1

if [ $1 -eq 1 ]; then
    # pkill --signal STOP htop || true
    # xfconf-query -c xfwm4 -p /general/use_compositing -s false
    memopti 0
    sudo tlp start
    echo Done
    exit 0
fi

if [ $1 -eq 0 ]; then
    # pkill --signal CONT htop || true
    # xfconf-query -c xfwm4 -p /general/use_compositing -s true
    memopti 1
    sudo tlp start
    echo Done
    exit 0
fi

